- for site in @sites
  = link_to admin_site_contents_path(site), title: t('scribo.sites.ide') do
    div.site
      img src="#{site.thumbnail ? site.url+site.thumbnail : 'data:image/png;base64,'}"
      .title
        = site.title
        - if site.url
          =< link_to site.url, title: t('scribo.sites.preview') do
            i.fas.fa-eye
        - if site.contents.count > 0
          =< link_to(export_admin_site_path(site), 'data-turbolinks' => 'false', title: t('scribo.sites.export')) do
            i.fas.fa-download
        =< link_to admin_site_path(site), title: t('scribo.sites.delete'), method: :delete, "data-confirm" => t('scribo.sites.delete_confirm') do
          i.fas.fa-trash
